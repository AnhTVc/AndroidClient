<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TableLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:layout_width="match_parent">

                <ImageView
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:foregroundGravity="right"
                    android:id="@+id/user_image_comment_IN_ITEM_COMMENT"
                    android:src="@drawable/john_williams"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AnhTVc"
                    android:id="@+id/user_comment_IN_ITEM_COMMENT"
                    android:textColor="@color/user_update"
                    android:textSize="7dp"
                    android:layout_below="@+id/user_image_comment_IN_ITEM_COMMENT"
                    android:layout_alignParentBottom="@+id/user_image_comment_IN_ITEM_COMMENT" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:padding="10dp"
                android:layout_width="match_parent">

                <TextView
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/content_comment_IN_ITEM_COMMENT"
                    android:text="display a TextArea with my android project? From xml, the only choice is TextField, multi lined. But thats editable. I need a textarea which is only for displaying mes"
                    android:textColor="@color/user_update"
                    android:textSize="8dp" />

                <TextView
                    android:focusable="false"
                    android:layout_marginTop="5dp"
                    android:focusableInTouchMode="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/time_create_IN_ITEM_COMMENT"
                    android:text="10p truoc"
                    android:layout_below="@+id/content_comment_IN_ITEM_COMMENT"
                    android:textSize="7dp" />
            </RelativeLayout>
        </TableRow>
    </TableLayout>
</RelativeLayout>