<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/user"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="18dp">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/user_image"
            android:src="@drawable/john_williams"/>
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/user_name"
            android:layout_height="wrap_content"
            android:text="AnhTVc"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/text_size_user_update"
            android:layout_toEndOf="@+id/user_image"
            android:layout_toRightOf="@+id/user_image"
            android:textColor="@color/user_update"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="4 phut truoc"
            android:id="@+id/time_create"
            android:layout_marginLeft="17dp"
            android:layout_below="@id/user_name"
            android:layout_toEndOf="@+id/user_image"
            android:textSize="@dimen/text_size_time_update"
            android:layout_toRightOf="@+id/user_image" />
    </RelativeLayout>
    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tableRowImage">

            <ImageView
                android:layout_height="150dp"
                android:src="@drawable/hdclearart"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/image_post_left"
                android:layout_weight="1.5"
                android:layout_width="wrap_content" />
            <ImageView
                android:layout_height="150dp"
                android:layout_width="wrap_content"
                android:id="@+id/image_post_right"
                android:src="@drawable/hdclearart"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_weight="1.5"
                android:layout_column="17" />
        </TableRow>

    </TableLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/content_post"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:textColor="@color/abc_primary_text_disable_only_material_light"
        android:text="Your Apple ID, tranvietanh.hust@gmail.com, was just used to download Quip - Docs, Chat, Spreadsheets from the Mac App Store on a computer or device that had not previously been associated with that Apple ID...v"
        android:textSize="@dimen/text_size_content"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_heart"
            android:layout_marginLeft="200dp"
            android:src="@drawable/ic_heart"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_heart"
            android:layout_marginLeft="260dp"
            android:id="@+id/bt_heart_broken"
            android:src="@drawable/ic_heart_broken"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="Bach Khoa"
            android:textColor="@color/user_update"
            />
    </RelativeLayout>

</LinearLayout>