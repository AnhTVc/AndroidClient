<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"

    android:id="@+id/main_scroll"
    tools:context="info.androidhive.project.activity.TagActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transcriptMode="disabled"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/container_toolbar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/hinh_06"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar_second"
                layout="@layout/toolbar_second" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bách khoa hiến máu"
                android:textColor="@android:color/white"
                android:gravity="center|center_horizontal"
                android:textSize="28dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:id="@+id/thumb_up"
                        android:src="@drawable/ic_thumb_up_black_24dp"
                        android:foregroundGravity="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="20123"
                        android:gravity="center|center_horizontal"
                        android:textColor="#7C7234"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/thumb_up" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:id="@+id/thumb_down"
                        android:src="@drawable/ic_thumb_down_black_24dp"
                        android:foregroundGravity="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="20123"
                        android:gravity="center|center_horizontal"
                        android:textColor="#7C7234"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/thumb_down" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_toc_black_24dp"
                        android:id="@+id/toc"
                        android:foregroundGravity="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Khác"
                        android:gravity="center|center_horizontal"
                        android:textColor="#7C7234"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/toc" />
                </RelativeLayout>

            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mô tả"
                android:background="#F9F9F4"
                android:textColor="#544E12"
                android:textStyle="italic"
                android:paddingLeft="30dp"
                android:textSize="16dp"
                android:layout_weight="1.5"
                android:paddingTop="10dp" />

            <TextView
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F9F9F4"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="#6C8E36"
                android:text="Cân nặng ít nhất là 42kg đối với phụ nữ, 45kg đối với nam giới. Lượng máu hiến mỗi lần không quá 9ml/kg cân nặng và không quá 500ml mỗi lần." />

            <RelativeLayout
                android:layout_marginTop="1dp"
                android:background="#F9F9F4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="D3-201 bách khoa hà nội"
                    android:textColor="#265E11"
                    android:paddingLeft="20dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:src="@drawable/ic_play_arrow_black_24dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="250dp"
                    android:layout_marginStart="250dp" />
            </RelativeLayout>
        </LinearLayout>

        <info.androidhive.project.activity.ListViewImplement.NestedListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listView_IN_TAGACTIVITY"></info.androidhive.project.activity.ListViewImplement.NestedListView>
    </LinearLayout>
</ScrollView>
